    android:color="#f8ffffff"
    tools:targetApi="lollipop">
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="50dip" />
                <gradient android:angle="-90" android:startColor="#000000" android:endColor="#000000" />
